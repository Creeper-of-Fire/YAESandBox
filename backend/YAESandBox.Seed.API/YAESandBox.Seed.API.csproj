<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <LangVersion>preview</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\YAESandBox.Seed.Block\YAESandBox.Seed.Block.csproj" />
        <ProjectReference Include="..\YAESandBox.Seed.DTOs\YAESandBox.Seed.DTOs.csproj" />
        <ProjectReference Include="..\YAESandBox.Seed.Services\YAESandBox.Seed.Services.csproj" />
        <ProjectReference Include="..\YAESandBox.Seed\YAESandBox.Seed.csproj" />
        <ProjectReference Include="..\YAESandBox.Depend.AspNetCore\YAESandBox.Depend.AspNetCore.csproj" PrivateAssets="all"/>
        <ProjectReference Include="..\YAESandBox.Depend\YAESandBox.Depend.csproj" PrivateAssets="all"/>
    </ItemGroup>

    <PropertyGroup>
        <!-- 
          定义此项目生成的 TS 客户端的目标前端根目录。
          $(MSBuildProjectDirectory) 是当前 csproj 文件所在的目录。
          对于 Seed.API 来说，需要向上两级 (../..) 才能找到 frontend 目录。
        -->
        <TsClientRoot>$([System.IO.Path]::GetFullPath('$(MSBuildProjectDirectory)/../../../frontend'))</TsClientRoot>
    </PropertyGroup>
    <ItemGroup>
        <!-- 
          - Identity (Include): Swagger 文档的名称，必须和 C# 代码中的 docName 完全一致。
          - JsonFileName: 生成的 swagger.json 文件的名字。
          - TsOutputSubDir: 生成的 TypeScript 客户端代码的子目录名。
        -->
        <!-- 公共 API (来自 SeedModule) -->
        <SwaggerDocToGenerate Include="v1-public" Visible="false">
            <JsonFileName>public-api.swagger.json</JsonFileName>
            <TsOutputModuleDir>app-game</TsOutputModuleDir>
            <TsOutputSubDir>public-api-client</TsOutputSubDir>
        </SwaggerDocToGenerate>
    </ItemGroup>

</Project>
