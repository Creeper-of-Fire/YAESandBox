{
  "openapi": "3.0.4",
  "info": {
    "title": "YAESandBox API (AI Config)",
    "description": "包含AI服务配置相关的API。",
    "version": "v1"
  },
  "paths": {
    "/api/ai-configuration-management/schemas/{configTypeName}": {
      "get": {
        "tags": [
          "AiConfigSchemas"
        ],
        "summary": "获取指定 AI 配置类型的表单 Schema 结构 (JSON Schema 格式，包含 ui: 指令)。\r\n用于前端动态生成该类型配置的【新建】或【编辑】表单骨架。",
        "parameters": [
          {
            "name": "configTypeName",
            "in": "path",
            "description": "AI 配置的类型名称 (例如 \"DoubaoAiProcessorConfig\")。",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/ai-configuration-management/available-config-types": {
      "get": {
        "tags": [
          "AiConfigSchemas"
        ],
        "summary": "获取所有可用的 AI 配置【类型定义】列表。\r\n用于前端展示可以【新建】哪些类型的 AI 配置。",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SelectOption"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SelectOption"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SelectOption"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/ai-configurations": {
      "get": {
        "tags": [
          "AiConfigurations"
        ],
        "summary": "获取所有已保存的 AI 配置的完整列表。",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "$ref": "#/components/schemas/AbstractAiProcessorConfig"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "$ref": "#/components/schemas/AbstractAiProcessorConfig"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "$ref": "#/components/schemas/AbstractAiProcessorConfig"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "AiConfigurations"
        ],
        "summary": "添加一个新的 AI 配置。",
        "requestBody": {
          "description": "要添加的 AI 配置对象。请求体中需要包含 'ModuleType' 辨别器属性。",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AbstractAiProcessorConfig"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AbstractAiProcessorConfig"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AbstractAiProcessorConfig"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/ai-configurations/{uuid}": {
      "get": {
        "tags": [
          "AiConfigurations"
        ],
        "summary": "根据 UUID 获取一个特定的 AI 配置。",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "description": "配置的唯一标识符。",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AbstractAiProcessorConfig"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AbstractAiProcessorConfig"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AbstractAiProcessorConfig"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "AiConfigurations"
        ],
        "summary": "更新一个已存在的 AI 配置。",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "description": "要更新的配置的唯一标识符。",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "包含更新信息的 AI 配置对象。ModuleType 应与现有配置匹配。",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AbstractAiProcessorConfig"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AbstractAiProcessorConfig"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AbstractAiProcessorConfig"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "AiConfigurations"
        ],
        "summary": "根据 UUID 删除一个 AI 配置。",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "description": "要删除的配置的唯一标识符。",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AbstractAiProcessorConfig": {
        "required": [
          "configName",
          "moduleType"
        ],
        "type": "object",
        "properties": {
          "configName": {
            "minLength": 1,
            "type": "string",
            "description": "配置的名称，不唯一（防止不小心搞错了），建议保证其是唯一的"
          },
          "moduleType": {
            "minLength": 1,
            "type": "string",
            "description": "模型的类型，持久化时工厂模式会使用它",
            "readOnly": true
          },
          "maxOutputTokens": {
            "type": "integer",
            "description": "最大输出Token数",
            "format": "int32",
            "nullable": true
          },
          "maxInputTokens": {
            "type": "integer",
            "description": "最大输入Token数。不出现在请求体中，但是在其他地方（如历史记录生成）会有用。",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "这个是Ai服务配置的基类，仅含绝对必须的字段。"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "SelectOption": {
        "required": [
          "label",
          "value"
        ],
        "type": "object",
        "properties": {
          "value": {
            "description": "选项的实际值。"
          },
          "label": {
            "minLength": 1,
            "type": "string",
            "description": "选项在UI上显示的文本。"
          }
        },
        "additionalProperties": false,
        "description": "代表一个选择项，用于下拉列表或单选/复选按钮组。"
      }
    }
  }
}