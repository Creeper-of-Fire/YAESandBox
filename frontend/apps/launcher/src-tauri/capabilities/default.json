{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "remote": {
    "urls": [
      "http://127.0.0.1:**",
      "https://**"
    ]
  },
  "permissions": [
    "core:default",
    "opener:default",
    "core:app:default",
    "core:path:default",
    "core:menu:default",
    "core:tray:default",
    "core:image:default",
    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-emit-to",
    "core:event:allow-listen",
    "core:window:default",
    "core:resources:default",
    "core:window:allow-close",
    "core:window:allow-center",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:window:allow-set-size",
    "core:window:allow-set-focus",
    "core:window:allow-is-maximized",
    "core:window:allow-start-dragging",
    "core:window:allow-toggle-maximize",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "core:window:allow-start-dragging",
      "allow": [
        {
          "url": "http://127.0.0.1:**"
        }
      ]
    },
    {
      "identifier": "core:window:allow-close",
      "allow": [
        {
          "url": "http://127.0.0.1:**"
        }
      ]
    },
    {
      "identifier": "core:window:allow-minimize",
      "allow": [
        {
          "url": "http://127.0.0.1:**"
        }
      ]
    },
    {
      "identifier": "core:window:allow-toggle-maximize",
      "allow": [
        {
          "url": "http://127.0.0.1:**"
        }
      ]
    },
    {
      "identifier": "core:window:allow-maximize",
      "allow": [
        {
          "url": "http://127.0.0.1:**"
        }
      ]
    },
    {
      "identifier": "core:window:allow-unmaximize",
      "allow": [
        {
          "url": "http://127.0.0.1:*"
        }
      ]
    },
    {
      "identifier": "core:window:allow-set-focus",
      "allow": [
        {
          "url": "http://127.0.0.1:*"
        }
      ]
    }
  ]
}
