{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // --- 包的特定配置 ---
    "baseUrl": ".", // baseUrl 必须在这里定义

    "outDir": "dist", // 库需要指定输出目录
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    // 如果 shell 是应用而不是库，可以不生成声明文件
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}